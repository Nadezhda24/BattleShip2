<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shipstation"
    tools:context=".Activity_Shop">

    <FrameLayout
        android:id="@+id/SettingLayout"
        android:layout_width="317dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/Bonus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Back"
                style="@style/strings"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_menu"
                android:onClick="onClick"
                android:text="Назад" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <Button
                android:id="@+id/Help"
                style="@style/strings"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_menu"
                android:onClick="onClick"
                android:text="Помощь" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="368dp"
        android:layout_height="344dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="199dp"
        android:background="@drawable/fon_fon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/Bonus1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/medicine1" />

                <TextView
                    android:id="@+id/Name1"
                    style="@style/strings_shop"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="5 МОНЕТ" />

                <Button
                    android:id="@+id/Buy1"
                    style="@style/strings"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_menu"
                    android:onClick="onClick"
                    android:text="Купить " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Bonus2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/candle" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/strings_shop"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:text="10 МОНЕТ" />

                <Button
                    android:id="@+id/button2"
                    style="@style/strings"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_menu"
                    android:text="Купить " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Bonus3"
                    android:layout_width="93dp"
                    android:layout_height="75dp"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/bomba" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/strings_shop"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:text="25 МОНЕТ" />

                <Button
                    android:id="@+id/button3"
                    style="@style/strings"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_menu"
                    android:text="Купить" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Bonus4"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/dynamite" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/strings_shop"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="30 МОНЕТ" />

                <Button
                    android:id="@+id/button4"
                    style="@style/strings"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_menu"
                    android:text="Купить " />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/Count_money"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="20dp"
        android:text="Количество монет"
        app:fontFamily="sans-serif-condensed-light"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bonus" />

    <TextView
        android:id="@+id/Bonus"
        android:layout_width="229dp"
        android:layout_height="46dp"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_weight="1"
        android:background="@drawable/shop"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>